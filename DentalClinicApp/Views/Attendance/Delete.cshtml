@model AttendanceDeleteViewModel
@{
    ViewData["Title"] = "Delete Attendance";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<form asp-action="Delete">

    <div class="d-flex justify-content-center">
        <div class="card " style="width: 50rem;">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.ClinicRemarks</h3>
                <p class="card-text"><span class="fw-bold">Description: </span>@Model.Diagnosis</p>
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <input type="submit" onclick="return confirm('Are sure you want to do this action?');" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>
