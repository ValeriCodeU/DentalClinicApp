@model AppointmentFormModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<div class="card-body alert-success border-success">
			<form method="post">
				<div class="form-group">
					<label asp-for="StartDate"></label>
					<input asp-for="StartDate" class="form-control" type="datetime-local" placeholder="Date...">
					<span asp-validation-for="StartDate" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Details"></label>
					<textarea asp-for="Details" rows="4" class="form-control" placeholder="Details..."></textarea>
					<span asp-validation-for="Details" class="small text-danger"></span>
				</div>

				<div class="text-center">
					<input class="btn btn-primary mt-3" type="submit" value="Send" />
				</div>
			</form>
		</div>
	</div>
</div>

