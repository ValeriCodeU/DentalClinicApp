@model PatientDetailsViewModel

@{
    ViewBag.Title = "Patient Procedure Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="card border-info alert-info mb-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Patient Info</h5>
                <p class="card-text"><span class="fw-bold">Full Name: </span>@Model.FirstName @Model.LastName </p>
                <p class="card-text"><span class="fw-bold">Email: </span>@Model.Email </p>
                <p class="card-text"><span class="fw-bold">Phone Number: </span>@Model.PhoneNumber </p> 
            </div>
        </div>
    </div>
</div>


@if (Model.PatientProcedures.Any())
{
    <div class="row">
        @foreach (var procedure in Model.PatientProcedures)
        {
            <partial name="_ProcedurePartial" model="@procedure" />
        }
    </div>
}
else
{
    <h3 class="text-center">No dental procedures yet!</h3>
}