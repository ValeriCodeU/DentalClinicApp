@model MyPatientsViewModel
@{
	ViewData["Title"] = "My Patients";
	int count = 0;
}

<table class="table table-success table-hover">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">First Name</th>
			<th scope="col">Last Name</th>
			<th scope="col">Phone Number</th>
			<th scope="col">Email</th>
			<th scope="col">Dental Problem</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model.Patients)
		{
			count++;
			<tr>
				<th scope="row">@count</th>
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
				<td>@user.PhoneNumber</td>
				<td>@user.Email</td>
				<td>
					<a asp-area="" asp-action="Details" asp-controller="Patient" asp-route-id="@user.Id" class="btn btn-primary">View</a>
					<a asp-area="" asp-action="Update" asp-controller="Problem" asp-route-id="" class="btn btn-success">Update</a>					
				</td>
			</tr>
		}

	</tbody>
</table>