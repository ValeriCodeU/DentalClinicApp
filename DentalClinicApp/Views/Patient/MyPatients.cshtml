@model MyPatientsViewModel
@{
	ViewData["Title"] = "My Patients";
	int count = 0;
}

<div class="row">
	<table class="table table-success table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">First Name</th>
				<th scope="col">Last Name</th>
				<th scope="col">Phone Number</th>
				<th scope="col">Email</th>
				<th scope="col">Dental Problems</th>
				<th scope="col">Attendances</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in Model.Patients)
			{
				count++;
				<tr>
					<th scope="row">@count</th>
					<td>@user.FirstName</td>
					<td>@user.LastName</td>
					<td>@user.PhoneNumber</td>
					<td>@user.Email</td>
					<td>
						<a asp-area="" asp-action="Details" asp-controller="Patient" asp-route-id="@user.Id" class="btn btn-primary">View</a>						
					</td>
					<td>
						<a asp-area="" asp-action="AttendanceDetails" asp-controller="Patient" asp-route-id="@user.Id" class="btn btn-primary">View</a>
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>
