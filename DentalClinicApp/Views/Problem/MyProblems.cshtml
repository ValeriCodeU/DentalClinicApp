@model IEnumerable<ProblemDetailsViewModel>

@{
    ViewBag.Title = "View My Problems";
	int count = 0;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Dental Status</th>
			<th scope="col">Actions</th>
		
		</tr>
	</thead>
	<tbody>
		@foreach (var problem in Model)
		{
			count++;
			<tr>
				<th scope="row">@count</th>
				<td>@problem.DiseaseName</td>
				<td>@problem.DentalStatus</td>
				
				<td>
					<a asp-area="" asp-action="Details" asp-controller="Problem" asp-route-id="@problem.Id" class="btn btn-primary">Details</a>
					<a asp-area="" asp-action="Edit" asp-controller="Problem" asp-route-id="@problem.Id" class="btn btn-success">Edit</a>					
					<a asp-area="" asp-action="Delete" asp-controller="Problem" asp-route-id="@problem.Id" class="btn btn-danger">Delete</a>					
				</td>
			</tr>
		}

	</tbody>
</table>
