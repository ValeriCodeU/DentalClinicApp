@model ProcedureFormModel

@{
    var date = ViewBag.Date;
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Procedure Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Procedure Description..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note"></label>
                <input asp-for="Note" class="form-control" placeholder="Note...">
                <span asp-validation-for="Note" class="small text-danger"></span>
            </div>
            
            @if (ViewBag.Title == "Edit Dental Procedure")
            {
                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <input asp-for="StartDate" class="datepicker form-control" readonly placeholder="Start Date...">
                    <span asp-validation-for="StartDate" class="small text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <input asp-for="StartDate" class="datepicker form-control" placeholder="Start Date...">
                    <span asp-validation-for="StartDate" class="small text-danger"></span>
                </div>
            }

           
            
             <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="datepicker form-control" placeholder="End Date...">
                <span asp-validation-for="EndDate" class="small text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="Cost"></label>
                <input asp-for="Cost" class="form-control" placeholder="Cost...">
                <span asp-validation-for="Cost" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId"></label>               
                <select asp-for="PatientId" class="form-select">
                    @foreach (var patient in Model.Patients)
                    {
                        <option value="@patient.Id">@patient.Name</option>
                    }
                </select>
                <span asp-validation-for="PatientId" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>


