@model ProblemFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <div class="card-body alert-success">
            <form method="post">
                <div class="form-group">
                    <label asp-for="DiseaseName"></label>
                    <input asp-for="DiseaseName" class="form-control" placeholder="Disease Name...">
                    <span asp-validation-for="DiseaseName" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiseaseDescription"></label>
                    <textarea asp-for="DiseaseDescription" rows="4" class="form-control" placeholder="Disease Description..."></textarea>
                    <span asp-validation-for="DiseaseDescription" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DentalStatus"></label>
                    <input asp-for="DentalStatus" class="form-control" placeholder="Write your dental status...">
                    <span asp-validation-for="DentalStatus" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AlergyDescription"></label>
                    <input asp-for="AlergyDescription" class="form-control" placeholder="Write if you have allergies...">
                    <span asp-validation-for="AlergyDescription" class="small text-danger"></span>
                </div>

                <div class="text-center">
                    <input class="btn btn-primary mt-3" type="submit" value="Save" />
                </div>
            </form>
        </div>        
    </div>
</div>