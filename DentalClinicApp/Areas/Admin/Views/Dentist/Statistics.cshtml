@model DentistStatisticsViewModel

@{
    ViewBag.Title = "Dentist's Statistics";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="card border-success mb-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Patient Info</h5>
                <p class="card-text">First Name:  @Model.FirstName</p>
                <p class="card-text">Last Name:  @Model.LastName</p>
                <p class="card-text">Email:  @Model.Email</p>
                <p class="card-text">Phone Number: @Model.PhoneNumber</p>
            </div>
        </div>
    </div>
</div>

<p class="card-text">Total patients:  @Model.TotalPatientsCount</p>
<p class="card-text">Total procedures:  @Model.TotalProceduresCount</p>
<p class="card-text">Total appointments:  @Model.TotalAppointmentsCount</p>
