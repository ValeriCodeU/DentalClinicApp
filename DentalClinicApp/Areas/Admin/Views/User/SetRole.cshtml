@model UserRolesViewModel

@{
	ViewData["Title"] = "User Roles";
	var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<div class="row">
	<div class="col-4">
		<form id="setrole" method="post">
			<input type="hidden" name="id" value="@Model.Id" />
			<input type="hidden" name="Name" value="@Model.Name" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-floating">
				<h3>Name: @Html.DisplayFor(m => m.Name)</h3>
			</div>
			<div class="mb-3">
					<div class="form-floating">
						<div class="form-group">
							<label>You can select a role or roles:</label>
							<select asp-for="RoleNames" asp-items="@items" class="form-control"></select>
						</div>
					</div>				
			</div>
			<div class="mb-3">
				<input class="btn btn-primary" type="submit" value="Set" />
			</div>
		</form>
	</div>
</div>
